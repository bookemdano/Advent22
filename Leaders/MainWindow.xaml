<Window x:Class="Leaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leaders"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
	<StackPanel>
        <Menu>

            <MenuItem Header="Year" Name="mnuYear"/>
            <MenuItem Header="Now" Click="Now_Click"/>
            <MenuItem Header="Add Next" x:Name="mnuAddNext" Click="AddNext_Click"/>
            <MenuItem Header="Puzzle" Click="Puzzle_Click"/>
            <MenuItem Header="Leaderboard" Click="Leaderboard_Click"/>
            <MenuItem Header="Slack"/>
        </Menu>
        <StackPanel Orientation="Horizontal">
		</StackPanel>
		<DataGrid x:Name="grd"/>
		<StackPanel Orientation="Horizontal"  Background="Black">
			<TextBlock x:Name="staNext" Margin="3" Foreground="PaleGreen" FontFamily="Courier New"/>
			<TextBlock x:Name="staLeft" Margin="3" Background="Black" Foreground="PaleGreen" FontFamily="Courier New"/>
		</StackPanel>
		<ListBox x:Name="lst" MaxHeight="500"/>
	</StackPanel>
</Window>
